{% extends 'base.html.twig' %}

{% block title %}ShoppingList{% endblock %}

{% block body %}
    <h1>ShoppingList</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ shopping_list.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ shopping_list.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ shopping_list.date ? shopping_list.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedDate</th>
                <td>{{ shopping_list.updatedDate ? shopping_list.updatedDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('shopping_list_index') }}">back to list</a>

    <a href="{{ path('shopping_list_edit', {'id': shopping_list.id}) }}">edit</a>

    {{ include('shopping_list/_delete_form.html.twig') }}
{% endblock %}
