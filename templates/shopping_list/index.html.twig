{% extends 'base.html.twig' %}

{% block title %}ShoppingList index{% endblock %}

{% block body %}
    <h1>ShoppingList index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date</th>
                <th>UpdatedDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shopping_list in shopping_lists %}
            <tr>
                <td>{{ shopping_list.id }}</td>
                <td>{{ shopping_list.name }}</td>
                <td>{{ shopping_list.date ? shopping_list.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ shopping_list.updatedDate ? shopping_list.updatedDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('shopping_list_show', {'id': shopping_list.id}) }}">show</a>
                    <a href="{{ path('shopping_list_edit', {'id': shopping_list.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('shopping_list_new') }}">Create new</a>
{% endblock %}
