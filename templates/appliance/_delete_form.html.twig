<form method="post" action="{{ path('appliance_delete', {'id': appliance.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ appliance.id) }}">
    <button class="btn">Delete</button>
</form>
