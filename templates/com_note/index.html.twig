{% extends 'base.html.twig' %}

{% block title %}ComNote index{% endblock %}

{% block body %}
    <h1>ComNote index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Note</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for com_note in com_notes %}
            <tr>
                <td>{{ com_note.id }}</td>
                <td>{{ com_note.date ? com_note.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ com_note.note }}</td>
                <td>{{ com_note.comment }}</td>
                <td>
                    <a href="{{ path('com_note_show', {'id': com_note.id}) }}">show</a>
                    <a href="{{ path('com_note_edit', {'id': com_note.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('com_note_new') }}">Create new</a>
{% endblock %}
